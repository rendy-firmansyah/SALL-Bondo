{
    "openapi": "3.0.0",
    "info": {
        "title": "SALL-Bondo API Documentation",
        "description": "Dokumentasi API untuk platform refleksi pembelajaran SALL-Bondo.",
        "contact": {
            "email": "ikafitriani@unej.ac.id"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/questionLearningReflect": {
            "get": {
                "tags": [
                    "Pertanyaan Learning"
                ],
                "summary": "Ambil semua pertanyaan learning",
                "description": "Mengambil seluruh data pertanyaan learning dari database",
                "operationId": "getAllPertanyaanLearning",
                "responses": {
                    "200": {
                        "description": "Berhasil mengambil data pertanyaan learning",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "name_key": {
                                                "type": "string",
                                                "example": "identitas_pertanyaan"
                                            },
                                            "pages": {
                                                "type": "string",
                                                "example": "learning_materials"
                                            },
                                            "keterangan": {
                                                "type": "string",
                                                "example": "Pertanyaan mengenai materi A"
                                            },
                                            "type": {
                                                "type": "string",
                                                "example": "radio_button"
                                            },
                                            "value": {
                                                "type": "object",
                                                "example": {
                                                    "option1": "Pilihan A",
                                                    "option2": "Pilihan B"
                                                }
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "date-time",
                                                "example": "2025-07-30T12:00:00Z"
                                            },
                                            "updated_at": {
                                                "type": "string",
                                                "format": "date-time",
                                                "example": "2025-07-30T12:00:00Z"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Pertanyaan Learning"
                ],
                "summary": "Simpan data pertanyaan learning",
                "description": "Menyimpan data pertanyaan learning ke dalam database",
                "operationId": "storePertanyaanLearning",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name_key",
                                    "pages",
                                    "keterangan"
                                ],
                                "properties": {
                                    "name_key": {
                                        "type": "string",
                                        "example": "identitas_pertanyaan"
                                    },
                                    "pages": {
                                        "type": "string",
                                        "example": "learning_materials"
                                    },
                                    "keterangan": {
                                        "type": "string",
                                        "example": "Pertanyaan mengenai materi A"
                                    },
                                    "type": {
                                        "type": "string",
                                        "example": "radio_button"
                                    },
                                    "value": {
                                        "type": "object",
                                        "example": {
                                            "option1": "Pilihan A",
                                            "option2": "Pilihan B"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Pertanyaan berhasil disimpan.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Pertanyaan berhasil disimpan."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validasi gagal",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/questionLearningReflect/{id}": {
            "delete": {
                "tags": [
                    "Pertanyaan Learning"
                ],
                "summary": "Hapus pertanyaan learning berdasarkan ID",
                "description": "Menghapus satu data pertanyaan learning dari database berdasarkan ID",
                "operationId": "deletePertanyaanLearning",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID dari pertanyaan learning yang akan dihapus",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Pertanyaan berhasil dihapus",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Pertanyaan berhasil dihapus."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Data tidak ditemukan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Pertanyaan tidak ditemukan."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/feedback": {
            "get": {
                "tags": [
                    "Survey"
                ],
                "summary": "Lihat hasil ringkasan survei",
                "operationId": "62767a0001ce7befc185be7166bc7e5f",
                "responses": {
                    "200": {
                        "description": "Hasil agregat jawaban",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "learning_materials_summary": {
                                            "type": "object"
                                        },
                                        "website_usability_summary": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Survey"
                ],
                "summary": "Simpan jawaban survei",
                "operationId": "0c5a2f7ae9f457324731107d8878ff78",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "learning_materials",
                                    "website_usability"
                                ],
                                "properties": {
                                    "learning_materials": {
                                        "type": "string",
                                        "example": "Very effective"
                                    },
                                    "website_usability": {
                                        "type": "string",
                                        "example": "Good"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Response saved successfully"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/api/learningReflect": {
            "post": {
                "tags": [
                    "Reflections"
                ],
                "summary": "Submit reflection form",
                "description": "Store user reflection from SALL-Bondo platform",
                "operationId": "6cefb6f36a316db6a0b2c4a2bb485faf",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Budi Santoso"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "081234567890"
                                    },
                                    "modules": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "learning_reflection": {
                                        "properties": {
                                            "new_knowledge": {
                                                "type": "string",
                                                "example": "Saya belajar banyak kosa kata baru."
                                            },
                                            "how_helped": {
                                                "type": "string",
                                                "example": "Materi mudah dipahami dan kontekstual."
                                            },
                                            "confidence": {
                                                "type": "string",
                                                "example": "Saya jadi lebih percaya diri berbicara dalam bahasa Inggris."
                                            },
                                            "reading_improvement": {
                                                "type": "string",
                                                "example": "Kemampuan membaca meningkat."
                                            },
                                            "listening_improvement": {
                                                "type": "string",
                                                "example": "Lebih mudah memahami percakapan."
                                            },
                                            "overall_improvement": {
                                                "type": "string",
                                                "example": "Ada peningkatan signifikan."
                                            },
                                            "english_score": {
                                                "type": "integer",
                                                "example": 8
                                            }
                                        },
                                        "type": "object"
                                    },
                                    "platform_rating": {
                                        "properties": {
                                            "easy_to_use": {
                                                "type": "integer",
                                                "example": 5
                                            },
                                            "clear_instructions": {
                                                "type": "integer",
                                                "example": 4
                                            },
                                            "no_technical_issue": {
                                                "type": "integer",
                                                "example": 5
                                            },
                                            "attractive_platform": {
                                                "type": "integer",
                                                "example": 5
                                            },
                                            "appropriate_level": {
                                                "type": "integer",
                                                "example": 4
                                            },
                                            "cultural_relevance": {
                                                "type": "integer",
                                                "example": 5
                                            },
                                            "real_life_context": {
                                                "type": "integer",
                                                "example": 5
                                            },
                                            "reading_skill": {
                                                "type": "integer",
                                                "example": 4
                                            },
                                            "listening_skill": {
                                                "type": "integer",
                                                "example": 4
                                            },
                                            "local_identity": {
                                                "type": "integer",
                                                "example": 5
                                            },
                                            "learning_enjoyment": {
                                                "type": "integer",
                                                "example": 5
                                            },
                                            "interactivity": {
                                                "type": "integer",
                                                "example": 5
                                            },
                                            "independent_learning": {
                                                "type": "integer",
                                                "example": 4
                                            },
                                            "learner_needs": {
                                                "type": "integer",
                                                "example": 4
                                            },
                                            "overall_satisfaction": {
                                                "type": "integer",
                                                "example": 5
                                            },
                                            "recommend_to_friends": {
                                                "type": "integer",
                                                "example": 5
                                            },
                                            "liked_aspect": {
                                                "type": "string",
                                                "example": "Fitur interaktif dan konten lokal."
                                            },
                                            "disliked_aspect": {
                                                "type": "string",
                                                "example": "Beberapa modul terlalu panjang."
                                            },
                                            "challenges": {
                                                "type": "string",
                                                "example": "Koneksi internet lambat."
                                            },
                                            "suggestions": {
                                                "type": "string",
                                                "example": "Tambahkan fitur audio interaktif."
                                            }
                                        },
                                        "type": "object"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        }
    },
